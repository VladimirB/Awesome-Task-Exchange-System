{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Tasks.Assigned.v1",
  "description": "json schema for Task assign business event (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "taskPublicId": { "type": "string" },
        "title":    { "type": "string" },
        "penalty":    { "type": "integer" },
        "userPublicId":    { "type": "string" }
      },
      "required": [
        "taskPublicId",
        "title",
        "penalty",
        "userPublicId"
      ]
    }
  },

  "type": "object",
  "properties": {
    "id":        { "type": "string" },
    "version":   { "enum": [1] },
    "name":      { "enum": ["task-tracker.TaskWasAssigned"] },
    "eventDate": { "type": "string" },
    "data":      { "$ref": "#/definitions/event_data" }
  },
  "required": [
    "id",
    "version",
    "name",
    "eventDate",
    "data"
  ]
}

